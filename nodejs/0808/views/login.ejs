<html>
    <head>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
        <title>
            로그인
        </title>
        <style>
            form{
                font-family: 'Courier New', Courier, monospace;
            }
            h2{
                text-align: center;
            }
        </style>
        <script>
            function userLogin(){
                var form = document.getElementById('form_login');
                axios({
                    method: 'post',
                    url: 'http://localhost:8000/user/login',
                    data: {
                        id: form.id.value,
                        pw: form.pw.value
                    }
                }).then((rep) => {return rep.data})
                .then((data) => {
                    alert(data);
                    form.reset();
                })

            }
        </script>
    </head>
    <body>
        <form action="/user/login" method="POST" id="form_login">
            <br>
            <h2>로그인</h2>

                <div class="form-floating mb-3 d-grid gap-2 col-3 mx-auto">
                    <input type="text" class="form-control" id="id" name="id" placeholder="아이디" required>
                    <label for="id">아이디</label>
                </div>

                <div class="form-floating mb-3 d-grid gap-2 col-3 mx-auto">
                    <input type="password" class="form-control" id="pw" name="pw" placeholder="비밀번호" required>
                    <label for="pw" class="floatingInput">비밀번호</label>
                </div>

            
                <div class="mb-3 d-grid gap-2 col-3 mx-auto">
                    <button type="button" onclick="userLogin();" class="btn btn-outline-primary">로그인</button>
                </div>

                <div class="mb-3 d-grid gap-2 col-3 mx-auto">
                    <button type="button" onclick="location.href='http://localhost:8000/user/update'" class="btn btn-outline-warning">회원정보 수정</button>
                </div>
        </form>
    </body>
</html>