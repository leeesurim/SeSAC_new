<html>
    <head>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

        <!-- Axios 사용하기 위해서 필요 -->
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        
        <title>
            Axios login
        </title>
        <style>
            form{
                font-family: 'Courier New', Courier, monospace;
            }
            h2{
                text-align: center;
            }
        </style>
        <script>

            function login(){
                var form = document.getElementById("login_form");
                console.log(form);

                axios({
                    method: "post",
                    url: "http://localhost:8080/login_receive",
                    data: {
                        id: form.id.value,
                        password: form.password.value
                    }
                })
                .then((a) => { return a.data; })
                .then((b) => { 
                    if (b){
                        $("p").text("로그인 성공").css("color", "blue");
                    }else{
                        $("p").text("로그인 실패").css("color","red");
                    }
                })
            }
        </script>


    </head>
    <body>
        <form id="login_form">
            <br>
            <h2>로그인</h2>

                <div class="form-floating mb-3 d-grid gap-2 col-4 mx-auto">
                    <input type="text" class="form-control" id="id" name="id" placeholder="아이디" required>
                    <label for="id">아이디</label>
                </div>

                <div class="form-floating mb-3 d-grid gap-2 col-4 mx-auto">
                    <input type="password" class="form-control" id="password" name="password" placeholder="비밀번호" required>
                    <label for="password" class="floatingInput">비밀번호</label>
                </div>
                <p class="d-grid gap-2 col-4 mx-auto" >
                </p>
                <div class="d-grid gap-2 col-4 mx-auto">
                    <button type="button" class="btn btn-outline-primary" onclick="login();">로그인</button>
                </div>
        </form>
    </body>
</html>