    <main>
        <section class="left">
            <img src="/img/login_img_grey.png" class="img1">                
        </section>
        <section class="right">
            
            <form class="signform">
                <legend class="titDep">회원가입</legend>
                    <label for="id" class="titLab">아이디</label>
                    <div class="inp_dup">
                        <input type="text" class="inpL" name="id" id="id" placeholder="아이디를 입력하세요">
                        <a href="#" role="button" class="btnDefault btnL btnLineP" id="btnDubCheck" disabled="true">중복확인</a>
                    </div>

                    <label for="password" class="titLab">비밀번호</label>
                    <input type="password" class="inpL" name="password" id="password" placeholder="비밀번호를 입력하세요">

                    <label for="password2" class="titLab">비밀번호 확인</label>
                    <input type="password" class="inpL" name="password2" id="password2" placeholder="확인을 위해 한번 더 입력하세요">
                    
                    
                    <label for="email" class="titLab">이메일</label>
                    <div class="inp_dup">
                        <input type="email" class="inpL" name="email" id="email" placeholder="이메일을 입력하세요">
                        <a href="#" role="button" class="btnDefault btnL btnLineP" id="btnDubCheck" disabled="true">중복확인</a>
                    </div>

                    <label for="name" class="titLab">이름</label>
                    <input type="text" class="inpL" name="name" id="name" placeholder="이름을 입력하세요">

                    <label for="phone_number" class="titLab">전화번호</label>
                    <input type="text" class="inpL" name="phone_number" id="phone_number" placeholder="- 없이 번호만 입력하세요">

                    <label for="nickname" class="titLab">닉네임</label>
                    <div class="inp_dup">
                        <input type="text" class="inpL" name="nickname" id="nickname" placeholder="닉네임을 입력하세요">
                        <a href="#" role="button" class="btnDefault btnL btnLineP" id="btnDubCheck" disabled="true">중복확인</a>
                    </div>

                    <span class="titLab">성별</span>
                    <div class="radFrm">
                        <input type="radio"  id="male" name="gender">
                        <label for="male">남자</label>
        
                        <input type="radio" id="female" name="gender">
                        <label for="female">여자</label>
                    </div>
                    </ul>

                    <div class="btnMargin">
                        <button type="button" class="button btnLightBlue btnPush" onclick="signup()">회원가입</button>
                    </div>
            </form>     
        </section>

    </main>
    
